            android:inputType="textPersonName"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Trener" />

        <EditText
            android:id="@+id/CoachName"
